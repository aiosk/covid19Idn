    script(defer src="https://cdn.jsdelivr.net/npm/vanilla-lazyload@16.1.0/dist/lazyload.min.js")

    script(src="https://cdn.jsdelivr.net/npm/observable-slim@0.1.5/proxy.min.js")
    script(src="https://cdn.jsdelivr.net/npm/observable-slim@0.1.5/observable-slim.min.js")

    script(defer src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js")
    script(defer src="https://cdn.jsdelivr.net/npm/chartjs-plugin-watermark@1.0.3/chartjs-plugin-watermark.min.js")

    script(defer src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js")
    script(defer src="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.6.3/js/plugins/foundation.core.min.js")
    script(defer src="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.6.3/js/plugins/foundation.util.mediaQuery.min.js")
    script(defer src="js/app.js")

